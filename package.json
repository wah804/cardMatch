{
  "name": "card-match-game",
  "version": "1.0.0",
  "description": "A card matching browser game",
  "scripts": {
    "start": "npm run build && start index.html",
    "build:ts": "tsc",
    "build:scss": "sass src/styles.scss dist/styles.css",
    "build": "npm run build:ts && npm run build:scss",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/styles.scss dist/styles.css",
    "dev": "npm run build && concurrently \"npm run watch:ts\" \"npm run watch:scss\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "sass": "^1.69.5",
    "typescript": "^5.9.3"
  }
}
